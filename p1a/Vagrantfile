# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/jammy64"

  config.vm.provision "shell", inline: <<-SHELL
      apt-get update
      apt-get install -y curl
  SHELL

  config.vm.define "alagacheS" do |control|
    control.vm.hostname = "alagacheS"
    control.vm.network "private_network", ip: "192.168.56.110"
    control.vm.provider "virtualbox" do |v|
      v.customize ["modifyvm", :id, "--name", "alagacheS"]
      v.memory = "1024"
    end

    # need to expose a folder with a copy of server token
    control.vm.synced_folder ".", "/vagrant"

    # we need k3s installed as a server
    control.vm.provision "shell", inline: <<-SHELL
      curl -sfL https://get.k3s.io | INSTALL_K3S_EXEC="--tls-san 192.168.56.110 --node-external-ip 192.168.56.110" K3S_NODE_NAME="$HOSTNAME" K3S_KUBECONFIG_MODE="644" sh -
      sudo cp /var/lib/rancher/k3s/server/node-token /vagrant/
    SHELL

  end

  config.vm.define "alagacheSW" do |control|
    control.vm.hostname = "alagacheSW"
    control.vm.network "private_network", ip: "192.168.56.111"
    control.vm.provider "virtualbox" do |v|
      v.customize ["modifyvm", :id, "--name", "alagacheSW"]
      v.memory = "1024"
    end

    control.vm.synced_folder ".", "/vagrant"

    # we use K3S_URL to tell installer to set it as agent
    # use the server token file in install
    control.vm.provision "shell", inline: <<-SHELL
      curl -sfL https://get.k3s.io | K3S_URL="https://192.168.56.110:6443" K3S_TOKEN_FILE="/vagrant/node-token" sh -
    SHELL
  end


end
